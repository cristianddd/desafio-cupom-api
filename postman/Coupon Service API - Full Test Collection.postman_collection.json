      "name": "04 - Get Coupon By Id (VALID - 200)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "const json = pm.response.json();",
              "pm.test('Response has expected fields', function () {",
              "  pm.expect(json).to.have.property('id');",
              "  pm.expect(json).to.have.property('code');",
              "  pm.expect(json).to.have.property('description');",
              "  pm.expect(json).to.have.property('discountValue');",
              "  pm.expect(json).to.have.property('expirationDate');",
              "  pm.expect(json).to.have.property('published');",
              "});",
              "",
              "pm.test('Returned id matches couponId var', function () {",
              "  pm.expect(json.id).to.eql(pm.collectionVariables.get('couponId'));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
