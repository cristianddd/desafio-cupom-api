  "item": [
    {
      "name": "01 - Create Coupon (VALID)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 201', function () {",
              "  pm.response.to.have.status(201);",
              "});",
              "",
              "const json = pm.response.json();",
              "pm.test('Response has id', function () {",
              "  pm.expect(json).to.have.property('id');",
              "});",
              "",
              "pm.test('Code is sanitized and uppercase', function () {",
              "  pm.expect(json.code).to.match(/^[A-Z0-9]{6}$/);",
              "});",
              "",
              "pm.collectionVariables.set('couponId', json.id);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"AB#C123\",\n  \"description\": \"Cupom válido para testes - sanitização e criação\",\n  \"discountValue\": 10.0,\n  \"expirationDate\": \"2026-12-31T23:59:59\",\n  \"published\": true\n}"
        },
